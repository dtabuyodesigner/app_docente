<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Cuaderno del Tutor - Programaci√≥n</title>
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/main.min.css' rel='stylesheet' />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
    <style>
        .btn-type {
            padding: 8px 15px;
            border: 2px solid transparent;
            border-radius: 20px;
            cursor: pointer;
            font-weight: bold;
            background: #eee;
        }

        .btn-type.active {
            border-color: #000;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        }

        :root {
            --primary: #003366;
            --secondary: #007bff;
            --success: #28a745;
            --danger: #dc3545;
            --warning: #ffc107;
            --info: #17a2b8;
            --light: #f8f9fa;
            --dark: #343a40;
            --bg: #f0f2f5;
            --text: #333;
            --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--bg);
            margin: 0;
            padding: 20px;
            color: var(--dark);
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Nav */
        .nav {
            background: var(--primary);
            padding: 10px 15px;
            margin-bottom: 25px;
            border-radius: 10px;
            display: flex;
            gap: 15px;
            box-shadow: var(--shadow);
            overflow-x: auto;
            align-items: center;
        }

        .nav a {
            color: white;
            text-decoration: none;
            font-weight: 600;
            padding: 6px 12px;
            border-radius: 8px;
            transition: background 0.2s;
            white-space: nowrap;
        }

        .nav a:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        .nav a.active {
            background: rgba(255, 255, 255, 0.2);
            border-bottom: 2px solid white;
        }

        /* Tab System */
        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            border-bottom: 2px solid #ddd;
            padding-bottom: 10px;
            overflow-x: auto;
        }

        .tab-btn {
            background: none;
            border: none;
            padding: 10px 20px;
            font-size: 1.1rem;
            font-weight: 700;
            color: #666;
            cursor: pointer;
            border-radius: 8px;
            transition: all 0.2s;
            white-space: nowrap;
        }

        .tab-btn:hover {
            background: #e2e6ea;
        }

        .tab-btn.active {
            color: var(--primary);
            background: white;
            box-shadow: var(--shadow);
        }

        .section {
            display: none;
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: var(--shadow);
        }

        .section.active {
            display: block;
            animation: fadeIn 0.3s ease;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        h2 {
            margin-top: 0;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        /* Form elements */
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 15px;
        }

        label {
            display: block;
            font-weight: 700;
            margin-bottom: 5px;
            color: #555;
            font-size: 0.9rem;
        }

        input,
        select,
        textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 10px;
            font-size: 1rem;
            box-sizing: border-box;
            transition: border-color 0.2s;
            font-family: inherit;
        }

        input:focus,
        select:focus,
        textarea:focus {
            outline: none;
            border-color: var(--secondary);
        }

        textarea {
            height: 120px;
            resize: vertical;
        }

        .btn {
            background: var(--secondary);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 10px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn:hover {
            filter: brightness(1.1);
            transform: translateY(-1px);
        }

        .btn-success {
            background: var(--success);
        }

        .btn-danger {
            background: var(--danger);
            padding: 8px 15px;
            font-size: 0.8rem;
        }

        .btn-info {
            background: var(--info);
        }

        /* Timeline & List */
        .timeline {
            margin-top: 30px;
        }

        .card-plan {
            background: #f8fbff;
            border-left: 5px solid var(--secondary);
            padding: 20px;
            border-radius: 0 12px 12px 0;
            margin-bottom: 15px;
            border: 1px solid #eef2f7;
            border-left-width: 5px;
            position: relative;
        }

        .card-date {
            font-weight: 800;
            color: var(--primary);
            margin-bottom: 5px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .card-sda {
            font-size: 0.9rem;
            color: #7f8c8d;
            font-style: italic;
            margin-bottom: 10px;
        }

        .card-desc {
            line-height: 1.6;
            white-space: pre-wrap;
        }

        /* Curricular Viewer */
        .area-container {
            margin-bottom: 30px;
            border: 1px solid #eee;
            border-radius: 12px;
            overflow: hidden;
        }

        .area-header {
            background: #e9ecef;
            padding: 15px 20px;
            font-weight: 800;
            color: var(--primary);
            font-size: 1.2rem;
        }

        .sda-item {
            padding: 15px 20px;
            border-bottom: 1px solid #f0f0f0;
        }

        .sda-item:last-child {
            border-bottom: none;
        }

        .criteria-list {
            margin-top: 10px;
            padding-left: 20px;
            font-size: 0.9rem;
        }

        .criteria-item {
            margin-bottom: 5px;
            color: #555;
        }

        .criteria-item strong {
            color: var(--primary);
        }

        .activity-badge {
            background: #e7f3fe;
            color: #1e4265;
            padding: 2px 8px;
            border-radius: 4px;
            font-size: 0.8rem;
            font-weight: bold;
            margin-right: 5px;
            border: 1px solid #bde0fe;
        }

        /* Import Section */
        .info-box {
            background: #e7f3fe;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
            font-size: 0.9rem;
            color: #1e4265;
        }

        #csvData,
        #csvActData {
            font-family: 'Courier New', monospace;
            height: 200px;
        }

        .status-msg {
            margin-top: 15px;
            padding: 12px;
            border-radius: 8px;
            display: none;
        }

        .template-links {
            margin-bottom: 20px;
            display: flex;
            gap: 15px;
        }

        .template-links a {
            text-decoration: none;
            color: var(--info);
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .template-links a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="nav">
            <a href="/">üè† Inicio</a>
            <a href="/asistencia">üìã Pasar lista</a>
            <a href="/alumnos">üë• Alumnos</a>
            <a href="/evaluacion">üìä Evaluaci√≥n</a>
            <a href="/informes">üìú Informes</a>
            <a href="/programacion" class="active">üìÖ Programaci√≥n</a>
            <a href="/rubricas">üìù R√∫bricas</a>
        </div>

        <div class="tabs">
            <button class="tab-btn active" onclick="showTab('tabDiario')">üìÖ Calendario / Diario</button>
            <button class="tab-btn" onclick="showTab('tabCurriculo')">üéØ Ver Curr√≠culo</button>
            <button class="tab-btn" onclick="showTab('tabImport')">üì• Importar SDA</button>
            <button class="tab-btn" onclick="showTab('tabImportAct')">üìù Importar Actividades</button>
            <button class="tab-btn" onclick="showTab('tabTasks')">üóíÔ∏è Tareas</button>
        </div>

        <!-- SECCI√ìN: DIARIO DE AULA (CALENDARIO) -->
        <div id="tabDiario" class="section active">
            <h2>üìÖ Programaci√≥n Diaria</h2>
            <p style="color:#666; margin-bottom: 15px;">‚ÑπÔ∏è Haz clic en un d√≠a para a√±adir una nota o evento. Arrastra
                para mover.</p>
            <div id="calendar" style="height: 600px;"></div>
        </div>

        <!-- Event Modal -->
        <div id="eventModal"
            style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.5); z-index:1000; align-items:center; justify-content:center;">
            <div
                style="background:white; padding:30px; border-radius:15px; width:90%; max-width:500px; box-shadow:0 10px 30px rgba(0,0,0,0.2);">
                <h3 id="modalTitle" style="margin-top:0;">Nuevo Evento</h3>

                <input type="hidden" id="eventId">

                <div style="margin-bottom:15px;">
                    <label>Fecha:</label>
                    <input type="date" id="eventDate">
                </div>

                <div style="margin-bottom:15px;">
                    <label>Tipo de Evento:</label>
                    <div style="display:flex; gap:10px;">
                        <button type="button" class="btn-type active" data-color="#3788d8" data-type="clase"
                            onclick="selectType(this)">üìò Clase</button>
                        <button type="button" class="btn-type" data-color="#dc3545" data-type="examen"
                            onclick="selectType(this)">üìï Examen</button>
                        <button type="button" class="btn-type" data-color="#28a745" data-type="excursion"
                            onclick="selectType(this)">üå≤ Excursi√≥n</button>
                        <button type="button" class="btn-type" data-color="#6c757d" data-type="festivo"
                            onclick="selectType(this)">üéâ Festivo</button>
                    </div>
                    <input type="hidden" id="eventType" value="clase">
                    <input type="hidden" id="eventColor" value="#3788d8">
                </div>

                <div style="margin-bottom:15px;">
                    <label>SDA Vinculada (Opcional):</label>
                    <select id="eventSda">
                        <option value="">-- Ninguna --</option>
                    </select>
                </div>

                <div style="margin-bottom:15px;">
                    <label>Actividad / T√≠tulo:</label>
                    <input type="text" id="eventActivity" placeholder="Ej: Repaso de Matem√°ticas">
                </div>

                <div style="margin-bottom:15px;">
                    <label>Detalles / Observaciones:</label>
                    <textarea id="eventObs" style="height:80px;"></textarea>
                </div>

                <div style="display:flex; justify-content:space-between; margin-top:20px;">
                    <button class="btn btn-danger" id="btnDelete" style="display:none;" onclick="deleteEvent()">üóëÔ∏è
                        Borrar</button>
                    <div>
                        <button class="btn" onclick="closeModal()"
                            style="background:#ccc; color:#333;">Cancelar</button>
                        <button class="btn btn-success" onclick="saveEvent()">üíæ Guardar</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- SECCI√ìN: VER CURR√çCULO -->
        <div id="tabCurriculo" class="section">
            <h2>üéØ Situaciones de Aprendizaje y Actividades</h2>
            <div id="curriculoList">
                <p style="text-align:center; color:#999;">Cargando curr√≠culo...</p>
            </div>
        </div>

        <!-- SECCI√ìN: IMPORTAR SDA -->
        <div id="tabImport" class="section">
            <h2>üì• Importaci√≥n Masiva de SDA (CSV)</h2>
            <div class="template-links">
                <a href="/static/plantilla_sda.csv" download>üìÑ Descargar Plantilla SDA</a>
            </div>
            <div class="info-box">
                <strong>Instrucciones:</strong> Pega los datos de tus SDAs en formato CSV (punto y coma).<br>
                <code>√Årea;Nombre de la SDA;Trimestre;C√≥digo Criterio;Descripci√≥n del Criterio</code>
            </div>
            <textarea id="csvData"
                placeholder="Ejemplo: Conocimiento del Medio;SDA 3: El cuerpo;2;CM1.1;Identifica partes..."></textarea>
            <div style="margin-top:15px;">
                <button class="btn btn-success" onclick="importSDA()">üöÄ Comenzar Importaci√≥n</button>
            </div>
            <div id="statusImport" class="status-msg"></div>
        </div>

        <!-- SECCI√ìN: IMPORTAR ACTIVIDADES -->
        <div id="tabImportAct" class="section">
            <h2>üìù Importaci√≥n Masiva de Actividades (CSV)</h2>
            <div class="template-links">
                <a href="/static/plantilla_actividades.csv" download>üìÑ Descargar Plantilla Actividades</a>
            </div>
            <div class="info-box">
                <strong>Instrucciones:</strong> Vincula actividades a tus SDAs ya existentes.<br>
                <code>Nombre SDA;Nombre Actividad;Sesiones;Descripci√≥n</code>
            </div>
            <textarea id="csvActData"
                placeholder="Ejemplo: SDA 3 ‚Äì El libro de los animales;Animales dom√©sticos;2;Analizar tipos..."></textarea>
            <div style="margin-top:15px;">
                <button class="btn btn-info" onclick="importActividades()">üöÄ Importar Actividades</button>
            </div>
            <div id="statusImportAct" class="status-msg"></div>
        </div>

        <!-- SECCI√ìN: TAREAS -->
        <div id="tabTasks" class="section">
            <h2>üóíÔ∏è Tareas Pendientes</h2>
            <div
                style="background: #fafafa; padding: 20px; border-radius: 12px; border: 1px dashed #ccc; margin-bottom: 30px;">
                <div class="form-row">
                    <div style="grid-column: span 2;">
                        <label>Nueva Tarea:</label>
                        <div style="display: flex; gap: 10px;">
                            <input type="text" id="newTaskId" placeholder="Escribe algo pendiente...">
                            <input type="date" id="newTaskDate" style="width: auto;">
                            <button class="btn btn-success" onclick="addTarea()">‚ûï A√±adir</button>
                        </div>
                    </div>
                </div>
            </div>
            <div id="taskList">
                <p style="text-align:center; color:#999;">Cargando tareas...</p>
            </div>
        </div>
    </div>

    <script>
        let fullCurriculo = [];

        function showTab(id) {
            document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.getElementById(id).classList.add('active');

            // Highlight the clicked button using the ID and text
            const btns = document.querySelectorAll('.tab-btn');
            btns.forEach(btn => {
                if (btn.onclick.toString().includes(id)) {
                    btn.classList.add('active');
                }
            });

            if (id === 'tabCurriculo') loadCurriculo();
            if (id === 'tabDiario') loadSessions();
            if (id === 'tabTasks') loadTareas();
        }

        // --- CARGAR DATOS INICIALES ---
        document.getElementById('fecha').valueAsDate = new Date();

        function loadInitialData() {
            fetch('/api/curricular/full')
                .then(r => r.json())
                .then(areas => {
                    fullCurriculo = areas;
                    const select = document.getElementById('sda_select');
                    select.innerHTML = '<option value="">-- Ninguna --</option>';
                    areas.forEach(area => {
                        const group = document.createElement('optgroup');
                        group.label = area.nombre;
                        area.sdas.forEach(sda => {
                            const opt = document.createElement('option');
                            opt.value = sda.id;
                            opt.innerText = `[T${sda.trimestre}] ${sda.nombre}`;
                            group.appendChild(opt);
                        });
                        select.appendChild(group);
                    });
                });
            loadSessions();
        }

        function updateActivitySelect() {
            const sdaId = document.getElementById('sda_select').value;
            const actSelect = document.getElementById('act_select');
            actSelect.innerHTML = '<option value="">-- Selecciona actividad si aplica --</option>';

            if (!sdaId) return;

            // Find SDA in fullCurriculo
            for (let area of fullCurriculo) {
                const sda = area.sdas.find(s => s.id == sdaId);
                if (sda) {
                    sda.actividades.forEach(act => {
                        const opt = document.createElement('option');
                        opt.value = act.id;
                        opt.innerText = `${act.nombre} (${act.sesiones} ses)`;
                        opt.dataset.desc = act.descripcion || "";
                        actSelect.appendChild(opt);
                    });
                    break;
                }
            }
        }

        function syncActivityText() {
            const sel = document.getElementById('act_select');
            const opt = sel.options[sel.selectedIndex];
            if (sel.value) {
                document.getElementById('actividad').value = opt.text + (opt.dataset.desc ? ": " + opt.dataset.desc : "");
            }
        }

        // --- CURR√çCULO VIEWER ---
        function loadCurriculo() {
            const list = document.getElementById('curriculoList');
            list.innerHTML = '<p style="text-align:center; color:#999;">Cargando curr√≠culo...</p>';

            fetch('/api/curricular/full')
                .then(r => r.json())
                .then(areas => {
                    fullCurriculo = areas;
                    if (areas.length === 0) {
                        list.innerHTML = '<p style="text-align:center; padding: 20px;">A√∫n no has importado ninguna SDA.</p>';
                        return;
                    }
                    list.innerHTML = "";
                    areas.forEach(area => {
                        const areaDiv = document.createElement('div');
                        areaDiv.className = 'area-container';
                        areaDiv.innerHTML = `<div class="area-header">${area.nombre}</div>`;

                        area.sdas.forEach(sda => {
                            const sdaDiv = document.createElement('div');
                            sdaDiv.className = 'sda-item';
                            sdaDiv.innerHTML = `<div style="display:flex; justify-content:space-between; align-items:center;">
                                <strong>[Trimestre ${sda.trimestre}] ${sda.nombre}</strong>
                                <!-- ID Hidden -->
                            </div>`;

                            // Actividades
                            if (sda.actividades && sda.actividades.length > 0) {
                                const actHtml = sda.actividades.map(a => `<span class="activity-badge" title="${a.descripcion || ''}">${a.nombre} (${a.sesiones})</span>`).join("");
                                sdaDiv.innerHTML += `<div style="margin-top:10px;">üìã Actividades: ${actHtml}</div>`;
                            }

                            // Criterios
                            const critList = document.createElement('div');
                            critList.className = 'criteria-list';
                            if (sda.criterios && sda.criterios.length > 0) {
                                sda.criterios.forEach(c => {
                                    critList.innerHTML += `<div class="criteria-item"><strong>${c.codigo}:</strong> ${c.descripcion}</div>`;
                                });
                            } else {
                                critList.innerHTML = `<div style="color:#999; font-style:italic;">No hay criterios vinculados. Probablemente importados sin link SDA-Criterio.</div>`;
                            }
                            sdaDiv.appendChild(critList);
                            areaDiv.appendChild(sdaDiv);
                        });
                        list.appendChild(areaDiv);
                    });
                })
                .catch(err => {
                    list.innerHTML = `<p style="text-align:center; color:red;">Error al cargar: ${err}</p>`;
                });
        }

        // --- CALENDAR LOGIC ---
        let calendar;
        let calendarInitialized = false;

        function initCalendar() {
            if (calendarInitialized) {
                // Just update size if already initialized
                if (calendar) calendar.updateSize();
                return;
            }

            var calendarEl = document.getElementById('calendar');
            if (!calendarEl) return;

            calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'es',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,listMonth'
                },
                editable: true, // Enable drag & drop
                events: '/api/programacion',
                dateClick: function (info) {
                    openModal(null, info.dateStr);
                },
                eventClick: function (info) {
                    openModal(info.event);
                },
                eventDrop: function (info) {
                    updateEventDate(info.event);
                }
            });
            calendar.render();
            calendarInitialized = true;
        }

        document.addEventListener('DOMContentLoaded', function () {
            // Load SDAs for select
            loadSdaOptions();
            // Initialize calendar immediately since tab is active by default
            setTimeout(initCalendar, 100);
        });

        function loadSdaOptions() {
            fetch('/api/curricular/full')
                .then(r => r.json())
                .then(areas => {
                    const select = document.getElementById('eventSda');
                    select.innerHTML = '<option value="">-- Ninguna --</option>';
                    areas.forEach(area => {
                        const group = document.createElement('optgroup');
                        group.label = area.nombre;
                        area.sdas.forEach(sda => {
                            const opt = document.createElement('option');
                            opt.value = sda.id;
                            opt.innerText = `[T${sda.trimestre}] ${sda.nombre}`;
                            group.appendChild(opt);
                        });
                        select.appendChild(group);
                    });
                });
        }

        // Modal Functions
        function openModal(event, dateStr) {
            const modal = document.getElementById('eventModal');
            document.getElementById('modalTitle').innerText = event ? 'Editar Evento' : 'Nuevo Evento';
            document.getElementById('btnDelete').style.display = event ? 'block' : 'none';

            if (event) {
                document.getElementById('eventId').value = event.id;
                document.getElementById('eventDate').value = event.startStr;
                document.getElementById('eventActivity').value = event.title;
                document.getElementById('eventObs').value = event.extendedProps.observaciones || "";
                document.getElementById('eventSda').value = event.extendedProps.sda_id || "";

                // Set type/color
                const type = event.extendedProps.tipo || 'clase';
                const btn = document.querySelector(`.btn-type[data-type="${type}"]`);
                if (btn) selectType(btn);

            } else {
                document.getElementById('eventId').value = "";
                document.getElementById('eventDate').value = dateStr;
                document.getElementById('eventActivity').value = "";
                document.getElementById('eventObs').value = "";
                document.getElementById('eventSda').value = "";
                selectType(document.querySelector('.btn-type[data-type="clase"]'));
            }

            modal.style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('eventModal').style.display = 'none';
        }

        function selectType(btn) {
            document.querySelectorAll('.btn-type').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            document.getElementById('eventType').value = btn.dataset.type;
            document.getElementById('eventColor').value = btn.dataset.color;
        }

        function saveEvent() {
            const id = document.getElementById('eventId').value;
            const data = {
                fecha: document.getElementById('eventDate').value,
                actividad: document.getElementById('eventActivity').value,
                observaciones: document.getElementById('eventObs').value,
                sda_id: document.getElementById('eventSda').value,
                tipo: document.getElementById('eventType').value,
                color: document.getElementById('eventColor').value
            };

            if (!data.actividad) return alert("Escribe un t√≠tulo/actividad");

            const method = id ? 'PUT' : 'POST';
            const url = id ? `/api/programacion/${id}` : '/api/programacion';

            fetch(url, {
                method: method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
                .then(r => r.json())
                .then(res => {
                    if (res.ok) {
                        closeModal();
                        calendar.refetchEvents();
                    } else {
                        alert("Error: " + res.error);
                    }
                });
        }

        function deleteEvent() {
            if (!confirm("¬øBorrar evento?")) return;
            const id = document.getElementById('eventId').value;
            fetch(`/api/programacion/${id}`, { method: 'DELETE' })
                .then(r => r.json())
                .then(res => {
                    if (res.ok) {
                        closeModal();
                        calendar.refetchEvents();
                    }
                });
        }

        function updateEventDate(event) {
            const data = {
                fecha: event.startStr,
                actividad: event.title,
                observaciones: event.extendedProps.observaciones,
                sda_id: event.extendedProps.sda_id,
                tipo: event.extendedProps.tipo,
                color: event.backgroundColor
            };

            fetch(`/api/programacion/${event.id}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
                .then(r => r.json())
                .then(res => {
                    if (!res.ok) {
                        alert("Error al mover evento");
                        calendar.refetchEvents(); // Revert
                    }
                });
        }

        // --- IMPORTACI√ìN ---
        function importSDA() {
            const text = document.getElementById('csvData').value.trim();
            const statusDiv = document.getElementById('statusImport');
            if (!text) return alert("Pega datos CSV primero");

            statusDiv.style.display = 'block';
            statusDiv.style.background = '#fff3cd';
            statusDiv.innerText = "‚è≥ Procesando...";

            fetch('/api/importar_sda', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ csv: text })
            })
                .then(r => r.json())
                .then(res => {
                    if (res.ok) {
                        statusDiv.style.background = '#d4edda';
                        statusDiv.innerText = `‚úÖ √âxito: Se han importado ${res.count} l√≠neas.`;
                        document.getElementById('csvData').value = "";
                        loadInitialData(); // Reload selects
                        setTimeout(() => statusDiv.style.display = 'none', 5000);
                    } else {
                        statusDiv.style.background = '#f8d7da';
                        statusDiv.innerText = "‚ùå Error: " + res.error;
                    }
                });
        }

        function importActividades() {
            const text = document.getElementById('csvActData').value.trim();
            const statusDiv = document.getElementById('statusImportAct');
            if (!text) return alert("Pega datos CSV primero");

            statusDiv.style.display = 'block';
            statusDiv.style.background = '#fff3cd';
            statusDiv.innerText = "‚è≥ Procesando...";

            fetch('/api/importar_actividades', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ csv: text })
            })
                .then(r => r.json())
                .then(res => {
                    if (res.ok) {
                        statusDiv.style.background = '#d4edda';
                        statusDiv.innerText = `‚úÖ √âxito: Se han importado ${res.count} actividades.`;
                        document.getElementById('csvActData').value = "";
                        loadInitialData();
                        setTimeout(() => statusDiv.style.display = 'none', 5000);
                    } else {
                        statusDiv.style.background = '#f8d7da';
                        statusDiv.innerText = "‚ùå Error: " + res.error;
                    }
                });
        }

        // --- TAREAS ---
        function loadTareas() {
            const list = document.getElementById('taskList');
            fetch('/api/tareas').then(r => r.json()).then(tasks => {
                if (tasks.length === 0) {
                    list.innerHTML = '<p style="text-align:center;">No hay tareas pendientes.</p>';
                    return;
                }
                list.innerHTML = "";
                tasks.forEach(t => {
                    const div = document.createElement('div');
                    div.style = "background: white; border: 1px solid #eee; padding: 15px; margin-bottom: 10px; border-radius: 8px; display: flex; align-items: center; justify-content: space-between;";
                    if (t.hecha) div.style.background = "#f8f9fa";

                    div.innerHTML = `
                        <div style="display:flex; align-items:center; gap: 10px;">
                            <input type="checkbox" ${t.hecha ? 'checked' : ''} onchange="toggleTarea(${t.id})" style="width: 20px; height: 20px;">
                            <div>
                                <div style="font-weight: bold; text-decoration: ${t.hecha ? 'line-through' : ''}; color: ${t.hecha ? '#999' : '#333'}">${t.texto}</div>
                                <div style="font-size: 0.8rem; color: #666;">${t.fecha || ''}</div>
                            </div>
                        </div>
                        <button onclick="deleteTarea(${t.id})" class="btn btn-danger" style="padding: 5px 10px;">üóëÔ∏è</button>
                    `;
                    list.appendChild(div);
                });
            });
        }

        function addTarea() {
            const txt = document.getElementById('newTaskId').value.trim();
            const date = document.getElementById('newTaskDate').value;
            if (!txt) return;
            fetch('/api/tareas', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ texto: txt, fecha: date })
            }).then(r => r.json()).then(res => {
                if (res.ok) {
                    document.getElementById('newTaskId').value = "";
                    loadTareas();
                }
            });
        }

        function toggleTarea(id) {
            fetch(`/api/tareas/${id}`, { method: 'PUT' }).then(() => loadTareas());
        }

        function deleteTarea(id) {
            if (!confirm("¬øBorrar tarea?")) return;
            fetch(`/api/tareas/${id}`, { method: 'DELETE' }).then(() => loadTareas());
        }

        // Init
        loadInitialData();
    </script>
</body>

